/* Project Styles... */
.project
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-around
  align-items: center
  position: relative
  width: 100%
  padding: 1em 1em 3.5em 1em

  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.6)

.project__image
.project__description
  width: 55%

.project__description
  h2
    font-weight: 400
  p
    line-height: 1.4

.project__image
  max-width: 110px
  max-height: 110px

  border-radius: 50%

.project__hashtag-list
  display: flex
  justify-content: space-around
  width: 100%

  a
    font-size: .8em
    font-weight: 100
    color: deepskyblue

.project__social-list
  display: flex
  justify-content: center
  width: 100%

  li
    display: inline-block
    min-width: 65px
    height: 35px
    margin-left: -3px

    border-radius: 4px

    &:nth-child(1)
      border: 1px solid #ccc

    &:nth-child(2)
      z-index: 1
      background: #3B5998 url('../build/img/facebook.svg') no-repeat center
    &:nth-child(3)
      z-index: 2
      background: #1dcaff url('../build/img/twitter.svg') no-repeat center
    &:nth-child(4)
      z-index: 3
      background: #d34836
    &:nth-child(5)
      z-index: 4
      background: #125688 url('../build/img/instagram.svg') no-repeat center

  a
    display: inline-block
    width: 100%
    height: 100%

    margin: 5px 0 0 0
    text-align: center
    color: #ccc

.project__like
  width: 80px
  height: 80px
  position: absolute
  bottom: 0
  right: 5%

  transform: translateY(50%);
  background: url('https://placehold.it/80x80') no-repeat
  border-radius: 50%
  box-shadow: -2px 4px 8px rgba(0, 0, 0, 0.5);
