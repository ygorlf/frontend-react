/* Container Styles... */
.container
	width: 95%
	margin: 0 auto

	@media(min-width: 768px)
		width: 60%

/* Header Styles... */
.header
	width: 100%
	height: 65px

	border-bottom: 3px solid sixthColor

.navigation
	display: flex
	flex-wrap: wrap
	justify-content: space-around
	align-items: center

	@media(min-width: 766px)
		justify-content: flex-end
		padding: 0 10%

.logo
	width: 128px
	text-indent: -9999px
	background: url('../build/img/precisaser.svg') no-repeat center

	@media(min-width: 766px)
		position: absolute
		left: 50%
		transform: translateX(-50%)


	&:hover
	&:active
		border: none

	span
		color: thirdColor
		border-bottom: 4px solid thirdColor

.dropdown
	display: block
	width: 49px
	height: 31px
	background: url('../build/img/menu-mobile.svg') no-repeat

	&:hover
	&:active
		border: none

	@media(min-width: 768px)
		display: none

.menu
	display: none

	@media(min-width: 768px)
		display: flex
		width: auto

	li
		width: 100%
		margin: .5em 0

		@media(min-width: 768px)
			margin: 0 5px

			&:nth-child(1)
			&:nth-child(2)
			&:nth-child(3)
				a:after
					content: '.'
					position: absolute
					top: -100%
					left: 100%
					font-size: 2em

	a
		width: 100%
		display: inline-block

		text-align: center
		color: fourthColor

		@media(min-width: 766px)
			position: relative


/* Make Part Styles... */
.make-part
	background: linear-gradient(to bottom, #3db5b0 25%,rgba(0,0,0,.9)25%,#e30059 25.5%,#e30059 25%,#e30059 50%,rgba(0,0,0,.9)50%,#ec7404 50.5%,#ec7404 50%,#ec7404 75%,rgba(0,0,0,.9) 75%,#f6a800 75.5%,#f6a800 75%,#f6a800 100%)
	box-shadow: 0px 2px 3px rgba(0,0,0,.9)

	@media(min-width: 768px)
		height: calc(100vh - 65px)

	>.container
		height: 100vh
		position: relative

	p
		margin: 0
		font-size: 1.2em

.intro
	padding: 20px 0

	text-align: center
	color: white

.big-title
	margin: 0
	color: sixthColor
	font-size: 3em


/* Features Section */
.features
	padding: 25px 0
