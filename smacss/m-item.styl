/* Item Styles... */
.item
	width: 100%
	padding: 15px 10px
	margin: 1.5em auto

	border: 1px solid #e3e3e3

	&:nth-child(1) .item__title:before
	&:nth-child(2) .item__title:before
	&:nth-child(3) .item__title:before
	&:nth-child(4) .item__title:before
		margin: -17px .5em 0 0

	&:nth-child(1) .item__title:before
		content: url(../build/assets/img/icon1.png)

	&:nth-child(2) .item__title:before
		content: url(../build/assets/img/icon2.png)

	&:nth-child(3) .item__title:before
		content: url(../build/assets/img/icon3.png)

	&:nth-child(4) .item__title:before
		content: url(../build/assets/img/icon4.png)

	&:last-child .item__title:before
		content: url(../build/assets/img/icon5.png)
		margin: -5px .5em 0 0

.item__icon
	float: left

.item__title
	font-size: 1em

	&:before
		float: left

.item__description
	clear: both
	width: 100%
