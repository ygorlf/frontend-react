@import "../../../smacss/variables.styl"

.form-login
	position: absolute
	top: 60%
	left: 50%
	width: 80%
	display: flex
	flex-direction: column
	padding: 100px 15px 30px
	transform: translate(-50%, -50%)

	background: #fff
	box-shadow: 0 1px 4px rgba(0,0,0, .7)
	z-index: 5

	@media(min-width: 768px)
		width: 35%
		top: 52%

.form-login__signin
.form-login__signup
	position: absolute
	width: 50%
	height: 60px

	cursor: pointer
	border: 1px solid rgba(151, 151, 151, .5)
	border-bottom: none
	font-size: 1.2em
	font-weight: 400

.form-login__signin
	top: 0
	left: 0

	color: fourthColor
	background: linear-gradient(to bottom, rgba(230, 230, 230, .4) 30%, #fff)

.form-login__signup
	top: 0
	right: 0

	color: sixthColor
	background: linear-gradient(to top, rgba(230, 230, 230, .4) 30%, #fff)

.form-login__email
.form-login__password
	margin: 1.5em 0
	padding: 10px

	color: fourthColor
	border: none
	border-bottom: 1px solid fourthColor

	&::placeholder
		font-size: 1.2em
		color: fourthColor

.form-login__btn
	width: 20%
	padding: 15px
	margin: 1.5em auto 0

	color: #fff
	cursor: pointer
	border: none
	font-size: 1.3em
	font-weight: bold
	background: fourthColor
	box-shadow: 2px 2px 6px rgba(0,0,0, .7)

	@media(min-width: 768px)
		margin: 1.5em 15px 0 auto

.overlay
	position: absolute
	top: 65px
	left: 0
	width: 100%
	height: calc(100vh - 65px)
